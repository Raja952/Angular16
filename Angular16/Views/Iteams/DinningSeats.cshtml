
@{
    ViewBag.Title = "DinningSeat";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>*@

    <script>
        System.import('../app/Iteams/DinningSeats/main').catch(function (err) { });
    </script>
    @*<script src="~/Scripts/Account/Test.js"></script>*@

    <style>
        body {
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
        }

        .product-card {
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            margin-bottom: 20px;
            padding: 15px;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

            .product-card img {
                width: 100%;
                border-radius: 5px;
            }

            .product-card .badge {
                position: absolute;
                top: 15px;
                left: 15px;
                background-color: #6f42c1;
                color: #fff;
                padding: 5px 10px;
                border-radius: 5px;
            }

            .product-card .price {
                font-size: 1.5rem;
                font-weight: bold;
                color: #333;
            }

            .product-card .old-price {
                text-decoration: line-through;
                color: #999;
            }

            .product-card .discount {
                color: #28a745;
                font-weight: bold;
            }

            .product-card .emi {
                color: #666;
            }

            .product-card .rating {
                color: #ffc107;
            }

            .product-card .assured {
                width: 20px;
                height: 20px;
            }

            .product-card .product-info {
                flex-grow: 1;
            }

            .product-card .product-footer {
                margin-top: auto;
            }

        .row > [class*='col-'] {
            margin-bottom: 20px;
        }

        .pagination {
            justify-content: center;
        }
    </style>

</head>
<body>
    <h2>DinningSeat</h2>

    <div class="container mt-4">
        <p>
            Showing 1-40 of 1301 options in
            <span class="text-danger">
                Beds
            </span>
        </p>
        <div class="row" id="product-container">
            <!-- Product cards will be inserted here by JavaScript -->
        </div>
        <DinningApp></DinningApp>
    </div>
    <script src="~/Scripts/SideMenu.js"></script>

</body>
</html>